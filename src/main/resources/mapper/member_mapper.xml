<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.book.member.dao.MemberDAO">
	
	<select id="login" resultType="MemberDTO">
	    SELECT count(member_email) FROM member WHERE member_email = #{member_email}
	</select>
	
	<insert id="join" >
		INSERT INTO member(member_email,member_pw,member_nickname,member_state,member_grade,member_level,reg_member_idx,
		red_screen,mod_member_idx,mod_screen,)
		VALUES(#{member_email},#{member_pw},#{member_nickname},#{member_state},#{member_grade},#{member_level},#{reg_member_idx},
		#{red_screen},#{mod_member_idx},#{mod_screen})
	</insert>

	<select id="emailOverCheck">
		SELECT count(member_idx) from member where member_email = #{member_emil}
	</select>
</mapper>